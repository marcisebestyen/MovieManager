@page "/edit/{Id:int}"
@rendermode InteractiveServer
@inject MovieService MovieSvc
@inject NavigationManager Navigation

<PageTitle>Edit Movie</PageTitle>

<style>
    .form-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .back-button {
        background: #1e293b;
        color: #cbd5e0;
        padding: 0.65rem 1.5rem;
        border-radius: 12px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        border: 2px solid #334155;
        transition: all 0.3s ease;
        margin-bottom: 2rem;
    }

    .back-button:hover {
        background: #334155;
        border-color: #6366f1;
        color: white;
        transform: translateX(-4px);
    }

    .page-header {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #d946ef 100%);
        padding: 3rem 2.5rem;
        border-radius: 24px;
        margin-bottom: 2.5rem;
        box-shadow: 0 20px 60px rgba(99, 102, 241, 0.4);
        position: relative;
        overflow: hidden;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        opacity: 0.4;
    }

    .page-header-content {
        position: relative;
        z-index: 1;
    }

    .page-title {
        color: white;
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        text-shadow: 2px 4px 8px rgba(0,0,0,0.3);
        letter-spacing: -0.02em;
    }

    .page-subtitle {
        color: rgba(255,255,255,0.95);
        font-size: 1.15rem;
        font-weight: 400;
    }

    .form-card {
        background: linear-gradient(145deg, #1e293b 0%, #334155 100%);
        border-radius: 20px;
        padding: 3rem;
        box-shadow: 0 8px 30px rgba(0,0,0,0.3);
        border: 1px solid rgba(255,255,255,0.1);
    }

    .form-label {
        color: #cbd5e0;
        font-weight: 700;
        font-size: 0.95rem;
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-size: 0.85rem;
    }

    .form-control, .form-select {
        background: #0f172a;
        border: 2px solid #334155;
        color: #e2e8f0;
        border-radius: 12px;
        padding: 1rem 1.25rem;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

    .form-control:focus, .form-select:focus {
        background: #1e293b;
        border-color: #6366f1;
        box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.15);
        color: white;
        outline: none;
    }

    .form-control::placeholder {
        color: #64748b;
    }

    .input-icon {
        font-size: 1.1rem;
    }

    .validation-message {
        color: #fca5a5;
        font-size: 0.875rem;
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.4rem;
        font-weight: 500;
    }

    .validation-message::before {
        content: '‚ö†Ô∏è';
    }

    .validation-summary {
        background: rgba(239, 68, 68, 0.15);
        border: 2px solid #ef4444;
        border-radius: 12px;
        padding: 1.25rem;
        margin-bottom: 2rem;
    }

    .validation-summary ul {
        margin: 0;
        padding-left: 1.5rem;
        color: #fca5a5;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2.5rem;
        padding-top: 2rem;
        border-top: 2px solid #334155;
    }

    .btn-submit {
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        color: white;
        padding: 1rem 3rem;
        border-radius: 14px;
        font-weight: 700;
        border: none;
        transition: all 0.3s ease;
        box-shadow: 0 8px 20px rgba(99, 102, 241, 0.4);
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        cursor: pointer;
    }

    .btn-submit:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 30px rgba(99, 102, 241, 0.5);
    }

    .btn-submit:active {
        transform: translateY(-1px);
    }

    .btn-cancel {
        background: #1e293b;
        color: #cbd5e0;
        padding: 1rem 2rem;
        border-radius: 14px;
        font-weight: 600;
        border: 2px solid #334155;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .btn-cancel:hover {
        background: #334155;
        border-color: #64748b;
        color: white;
        transform: translateY(-2px);
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .form-group {
        margin-bottom: 2rem;
    }

    .helper-text {
        color: #94a3b8;
        font-size: 0.85rem;
        margin-top: 0.5rem;
        font-style: italic;
    }

    .feature-highlight {
        background: rgba(139, 92, 246, 0.1);
        border: 2px solid rgba(139, 92, 246, 0.3);
        border-radius: 12px;
        padding: 1.25rem;
        margin-bottom: 2rem;
    }

    .feature-highlight-title {
        color: #c4b5fd;
        font-weight: 700;
        font-size: 0.95rem;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .feature-highlight-text {
        color: #cbd5e0;
        font-size: 0.9rem;
        line-height: 1.6;
    }

    .loading-state {
        text-align: center;
        padding: 5rem 2rem;
    }

    .spinner {
        border: 4px solid #334155;
        border-top: 4px solid #6366f1;
        border-radius: 50%;
        width: 60px;
        height: 60px;
        animation: spin 1s linear infinite;
        margin: 0 auto 1.5rem;
    }
</style>

<div class="form-container">
    @if (movie == null)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p class="text-light fs-5">Loading movie details...</p>
        </div>
    }
    else
    {
        <a href="/" class="back-button">
            ‚Üê Back to Collection
        </a>

        <div class="page-header">
            <div class="page-header-content">
                <h1 class="page-title">‚úèÔ∏è Edit Movie</h1>
                <p class="page-subtitle">Update details for: @movie.Title</p>
            </div>
        </div>

        <div class="form-card">
            <div class="feature-highlight">
                <div class="feature-highlight-title">
                    üí° Editing Tips
                </div>
                <div class="feature-highlight-text">
                    Make any changes you need below. Remember, movies with ratings of 9.0 or higher will be marked as top-rated masterpieces!
                </div>
            </div>

            <EditForm Model="movie" OnValidSubmit="HandleValidSubmit" FormName="EditMovie">
                <DataAnnotationsValidator />
                <ValidationSummary class="validation-summary" />

                <div class="form-group">
                    <label for="title" class="form-label">
                        <span class="input-icon">üé•</span>
                        Movie Title
                    </label>
                    <InputText id="title" 
                               class="form-control" 
                               @bind-Value="movie.Title" 
                               placeholder="Enter movie title..." />
                    <ValidationMessage For="@(() => movie.Title)" class="validation-message" />
                    <div class="helper-text">The official title of the movie</div>
                </div>

                <div class="form-group">
                    <label for="director" class="form-label">
                        <span class="input-icon">üé¨</span>
                        Director
                    </label>
                    <InputText id="director" 
                               class="form-control" 
                               @bind-Value="movie.Director" 
                               placeholder="Enter director name..." />
                    <ValidationMessage For="@(() => movie.Director)" class="validation-message" />
                    <div class="helper-text">The person who directed the film</div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="year" class="form-label">
                            <span class="input-icon">üìÖ</span>
                            Release Year
                        </label>
                        <InputNumber id="year" 
                                     class="form-control" 
                                     @bind-Value="movie.Year" 
                                     placeholder="e.g., 2024" />
                        <ValidationMessage For="@(() => movie.Year)" class="validation-message" />
                    </div>
                    <div class="form-group">
                        <label for="rating" class="form-label">
                            <span class="input-icon">‚≠ê</span>
                            Rating
                        </label>
                        <InputNumber id="rating" 
                                     class="form-control" 
                                     @bind-Value="movie.Rating" 
                                     step="0.1" 
                                     placeholder="0.0 - 10.0" />
                        <ValidationMessage For="@(() => movie.Rating)" class="validation-message" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="genre" class="form-label">
                        <span class="input-icon">üé≠</span>
                        Genre
                    </label>
                    <InputText id="genre" 
                               class="form-control" 
                               @bind-Value="movie.Genre" 
                               placeholder="e.g., Action, Drama, Comedy..." />
                    <ValidationMessage For="@(() => movie.Genre)" class="validation-message" />
                    <div class="helper-text">The primary genre of the movie</div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-submit">
                        üíæ Save Changes
                    </button>
                    <a href="/" class="btn-cancel">
                        Cancel
                    </a>
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Movie? movie;
    
    protected override async Task OnInitializedAsync()
    {
        movie = await MovieSvc.GetMovieByIdAsync(Id);
    }

    private async Task HandleValidSubmit()
    {
        if (movie != null)
        {
            await MovieSvc.UpdateMovieAsync(movie);
            Navigation.NavigateTo("/");
        }
    }
}